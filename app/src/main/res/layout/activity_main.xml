<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <Button
    android:id="@+id/btnAuthentication"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:backgroundTint="@color/black"
    android:textSize="24sp"
    android:text="Nyoba Authentication"/>

  <Button
    android:id="@+id/btnFireStore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nyoba FireStore"
    android:layout_marginTop="16dp"
    android:textColor="@color/white"
    android:backgroundTint="@color/black"
    android:textSize="24sp"/>

  <Button
    android:id="@+id/btnRealtime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nyoba Realtime"
    android:layout_marginTop="16dp"
    android:textColor="@color/white"
    android:backgroundTint="@color/black"
    android:textSize="24sp"/>

  <Button
    android:id="@+id/btnStorage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nyoba Storage"
    android:layout_marginTop="16dp"
    android:textColor="@color/white"
    android:backgroundTint="@color/black"
    android:textSize="24sp"/>

  <Button
    android:id="@+id/btnCrashlytics"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nyoba Crashlytics"
    android:layout_marginTop="16dp"
    android:textColor="@color/white"
    android:backgroundTint="@color/black"
    android:textSize="24sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>